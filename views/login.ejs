<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="css/login.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="main">
      <input type="checkbox" id="chk" aria-hidden="true" />
      <div class="signup">
        <form action="http://localhost:6969/user_data" method="post">
          <label for="chk" aria-hidden="true">Sign up</label>
          <input type="text" name="txt" placeholder="User name" required="" />
          <input type="email" name="email" placeholder="Email" required="" />
          <input
            type="password"
            name="pswd"
            placeholder="Password"
            required=""
          />
          <button type="submit">Sign up</button>
        </form>
      </div>

      <div class="login">
        <form action="http://localhost:6969/user" method="post">
          <label for="chk" aria-hidden="true">Login</label>
          <input type="email" name="email" placeholder="Email" required="" />
          <input
            type="password"
            name="pswd"
            placeholder="Password"
            required=""
          />
          <button type="submit">Login</button>
        </form>
      </div>
    </div>
    <div class="validation"></div>
    <script>
      var email = <%- JSON.stringify(email) %>;
      var username = <%- JSON.stringify(username) %>;
      var user = <%- JSON.stringify(user) %>;
      var password = <%- JSON.stringify(password) %>;
      let error = "";
      if (username == "t") {
        error =
          error +
          "This username already exists, Please choose a different username";
      } else if (email == "t") {
        error = error + "Another user with this email already exists";
      } else if (user == "t") {
        error = error + "Please check the email-ID as no such user exists";
      } else if (password == "t") {
        error = error + "Please check your password";
      }
      console.log(error);
      let error_to_display = document.getElementsByClassName("validation")[0];
      if(error == "") {
        error_to_display.style.display = "none"
      } else {
        error_to_display.innerHTML = error;
      }
    </script>
  </body>
</html>
